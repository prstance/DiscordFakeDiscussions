{
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "brace-style": [
        "error", "stroustrup"
      ],
      "quotes": [
        "error", "double"
      ],
      "indent": [
        "error", 2
      ],
      "semi": [
        "error", "always"
      ]
    }
  }